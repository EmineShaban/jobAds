

        <section id="viewAddhotel">
            <h2>Add new hotel</h2>
            <form method="post" id="formAddhotel">
                <label for="hotel">Hotel name:</label>
                <input type="text" id="hotel" name="hotel" placeholder="Hotel name" value="{{hotel.hotel}}">
                <label for="city">City:</label>
                <input type="text" id="city" name="city" placeholder="City" value="{{hotel.city}}">
                <label for="free-rooms">Free rooms:</label>
                <input type="number" id="freeRooms" name="freeRooms" placeholder="Free rooms" value="{{hotel.freeRooms}}">
                <label for="imgUrl">Image:</label>
                <input type="text" id="imgUrl" name="imgUrl" placeholder="https://" value="{{hotel.imgUrl}}">

                <input type="submit" class="create" value="Add">
            </form>
        </section>

