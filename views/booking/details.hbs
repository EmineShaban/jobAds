<section id="viewhotelDetails">
    <h2>Details</h2>
    <div class="hotel-ticket">
        <div class="hotel-left">
            <img src="{{imgUrl}}" alt="imgUrl">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{hotel}}</h3>
            </div>
            <div>
                {{city}}
            </div>
            <p><span>Free rooms: {{freeRooms}}</span> </p>



            {{#if isAuthor}}
            <a href="/booking/{{_id}}/edit" class="edit">Edit</a>
            <a href="/booking/{{_id}}/delete" class="remove">Delete</a>
            {{else}}
            {{#if isAlreadyJoin}}
            <p><span class="green">You already have booked a room</span> </p>
            {{else}}
            <a href="/booking/{{_id}}/join" class="book">Book</a>
            {{/if}}
            {{/if}}
        </div>

    </div>
</section>