<main>

    <section id="create-page">

        <article class="create-page-container">
            <form action="#" method="post" class="create-page-form">
                <h2>Create an ad</h2>

                <label for="headline">Headline:</label>
                <input type="text" id="headline" placeholder="Front-End Developer with React" name="headline" value="{{reklama.headline}}">

